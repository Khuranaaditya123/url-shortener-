<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>URL Shortener</title>

  <!-- GSAP CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

  <!-- Particles.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #0f2027;
      color: #fff;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      position: relative;
    }

    #particles-js {
      position: absolute;
      width: 100%;
      height: 100%;
      z-index: 0;
    }

    .container {
      z-index: 2;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      padding: 40px;
      width: 90%;
      max-width: 500px;
      backdrop-filter: blur(15px);
      box-shadow: 0 0 25px rgba(0, 255, 255, 0.2);
      animation: fadeIn 2s ease-in-out forwards;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }

    h1 {
      text-align: center;
      margin-bottom: 25px;
      font-size: 2.2rem;
      background: linear-gradient(90deg, #00ffe7, #00b3ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    label {
      font-size: 1.1rem;
      display: block;
      margin-bottom: 8px;
    }

    input[type="text"] {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 10px;
      background-color: rgba(255, 255, 255, 0.1);
      color: #fff;
      font-size: 1rem;
      margin-bottom: 20px;
    }

    input[type="text"]:focus {
      outline: none;
      background: rgba(255, 255, 255, 0.2);
      box-shadow: 0 0 10px #00ffe7;
    }

    button {
      width: 100%;
      padding: 12px;
      background: #00ffe7;
      color: #1e1e2f;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
      box-shadow: 0 0 15px #00ffe7;
    }

    button:hover {
      background: #00b3ff;
      box-shadow: 0 0 15px #00b3ff, 0 0 30px #00ffe7;
      transform: scale(1.05);
    }

    p {
      margin-top: 25px;
      text-align: center;
      font-size: 1.1rem;
      animation: bounceIn 1s ease-in-out;
    }

    @keyframes bounceIn {
      0% { transform: scale(0.8); opacity: 0; }
      60% { transform: scale(1.05); opacity: 1; }
      100% { transform: scale(1); }
    }

    a {
      color: #00ffe7;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      color: #00b3ff;
      text-shadow: 0 0 5px #00b3ff;
    }
  </style>
</head>

<body>
  <div id="particles-js"></div>

  <div class="container" id="mainContainer">
    <h1 id="heading">URL Shortener</h1>
    <form action="/short" method="post">
      <label for="longUrl">Enter Long URL:</label>
      <input type="text" id="longUrl" name="longUrl" required>
      <button type="submit">Shorten</button>
    </form>

    <% if(shortUrl) { %>
      <p id="shortened">Short URL: 
        <a href="<%= shortUrl %>" target="_blank"><%= shortUrl %></a>
      </p>
    <% } %>
  </div>

  <script>
    // GSAP entry animations
    gsap.from("#mainContainer", {
      duration: 1.5,
      y: 50,
      opacity: 0,
      ease: "power3.out"
    });

    gsap.from("#heading", {
      duration: 1,
      scale: 0.9,
      delay: 0.3,
      ease: "back.out(1.7)"
    });

    // particles.js config
    particlesJS("particles-js", {
      particles: {
        number: { value: 60 },
        color: { value: "#00ffe7" },
        shape: { type: "circle" },
        opacity: {
          value: 0.5,
          random: true,
        },
        size: {
          value: 4,
          random: true
        },
        move: {
          enable: true,
          speed: 2,
          direction: "none",
          out_mode: "out"
        }
      },
      interactivity: {
        detect_on: "canvas",
        events: {
          onhover: { enable: true, mode: "repulse" },
        },
        modes: {
          repulse: { distance: 100, duration: 0.4 }
        }
      },
      retina_detect: true
    });
  </script>
</body>
</html>
